{{#if addNewBook}}
<h1>New Rental</h1>
  <div>
    <h4>New Question</h4>
    <div class="row">
     <form class="col s12">
       <div class="row">
         <div class="input-field col s6">
           <label for="author">Author</label>
           {{input value=author id="author"}}
         </div>
       </div>
       <div class="row">
         <div class="input-field col s8">
           <label for="title">Title</label>
           {{input value=title id="title"}}
         </div>
       </div>
       <div class="row">
        <div class="input-field col s8">
          <label for="description">Description</label>
          {{textarea value=description id="description" class="materialize-textarea"}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s4">
          <label for="price">Price</label>
          {{input value=price id="price"}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s8">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>
      </div>
        <button class="waves-effect waves-light btn green" {{action 'saveBook'}}>Save</button>
     </form>
   </div>
  </div>
 {{else}}
    <button class="waves-effect waves-light btn blue"{{action 'bookFormShow'}}>New Book</button>
{{/if}}
